@model StokEkstresi.Domain.WebUI.Filter.STKFilter

@{
    ViewBag.Title = "StokEkstre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section PageScripts
{
    <script src='@Url.Content("~/Scripts/pages/STK/stkjs.js")'></script>
}
@section BrundCrumb{
    @Html.BuildBrandCrumb()
}
<div class="row">
    <div class="col-md-12">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title"><i class="fa fa-filter"></i> Filters</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <div class="box-body" style="">
                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.MalKodu, new { @class = "control-label" })
                        <div class="form-group">
                            @Html.BTextBoxFor(model => model.MalKodu, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.MalAdı, new { @class = "control-label" })
                        <div class="form-group">
                            @Html.BTextBoxFor(model => model.MalAdı, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer" style="">
                <div class="col-md-12">
                    <div style="float:right; padding-left:2px;">
                        <button type="button" class="btn btn-block btn-danger btnClear">Clear</button>
                    </div>
                    <div style="float:right; padding-right:2px;">
                        <button type="button" class="btn btn-block btn-primary btnSearch">Search</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
           
            <div class="box-header">
            </div>
            <div class="box-body">
                <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                    <div class="col-sm-12">
                        <table id="tableSTKList" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>SiraNo</th>
                                    <th>IslemTur</th>
                                    <th>EvrakNo</th>
                                    <th>Tarih</th>
                                    <th>GirisMiktar</th>
                                    <th>CikisMiktar</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    jQuery(document).ready(function () {
        var initObject = [];
        var urls = {
            gridLoadUrl: '@Url.Action("GetStokDefinitionList", "Home")'

        };

        // obje içerisnde kullanımını görmeniz için ekliyorum
        var languageItems = {
            editButtonText : "Edit"
        };

        initObject.urls = urls;
        initObject.languageItems = languageItems;

        STKlist.init(initObject);
    });
</script>